{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDirs": "src",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "dist"
  ],
  "compileOnSave": false
}
